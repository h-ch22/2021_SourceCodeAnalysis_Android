<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name = "viewModel"
            type = "kr.ac.jbnu.moonlader.framework.models.NavigationViewController"/>
    </data>

    <FrameLayout
        android:id = "@+id/view"
        android:background="@color/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context = ".framework.View.NavigationViewManager">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id = "@+id/navigationBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/background"
            app:itemIconTint="@color/color_navigationbar"
            app:itemTextColor="@color/color_navigationbar"
            app:menu = "@menu/menu_bottomnavigation"/>

    </FrameLayout>


</layout>